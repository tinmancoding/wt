{
  "name": "wt",
  "version": "0.1.0",
  "description": "Git Worktree Manager - Enhanced CLI tool for managing Git worktrees",
  "author": "TinManCoding aka Laszlo Andrasi",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "bin": {
    "wt": "./wt"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --minify --sourcemap --target bun src/index.ts --outfile wt",
    "build:all": "./scripts/build-all.sh",
    "build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 src/index.ts --outfile dist/wt-linux-x64",
    "build:linux-arm64": "bun build --compile --minify --target=bun-linux-arm64 src/index.ts --outfile dist/wt-linux-arm64",
    "build:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 src/index.ts --outfile dist/wt-darwin-x64",
    "build:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 src/index.ts --outfile dist/wt-darwin-arm64",
    "install-bin": "bun run build && mkdir -p ~/.local/bin && cp ./wt ~/.local/bin/wt && echo 'wt binary installed to ~/.local/bin/wt'",
    "test": "bun test",
    "test:unit": "bun test --bail tests/unit/",
    "test:integration": "bun test --bail tests/integration/",
    "type-check": "bun run tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "developer-tools",
    "git-tools"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
